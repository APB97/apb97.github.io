@using apb97.github.io.Shared.Services
@using apb97.github.io.WebSudoku.Shared

<LocalizedComponent T="NavMenu" Context="Loc">
    <div class="top-row ps-3 navbar navbar-dark w-100">
        <div class="container-fluid align-items-stretch">
            <div class="d-flex w-100-50">
                <a class="navbar-brand align-content-center" href="https://apb97.github.io">APB97</a>
                <div class="flex-grow-1"></div>
                <button style="border: none; background-color: transparent; padding: 0;" @onclick="Layout.ToggleLayoutMode">
                    @if (Layout.LayoutMode == LayoutMode.Light)
                    {
                        <div style="width: 56px;">
                            <img style="height: 2rem; filter: invert(0.95);" src="/images/dark.svg" />
                        </div>
                    }
                    else
                    {
                        <div style="width: 56px;">
                            <img style="height: 2rem; filter: invert(0.95);" src="/images/light.svg" />
                        </div>
                    }
                </button>
            </div>
            <div class="d-flex w-100-50" style="flex-grow: 0.25">
                <HiddenForScreenWidth HiddenForComparison="ComparisonOperator.GT" Breakpoint="ScreenBreakpoints.Medium">
                    <div class="navbar-language-select align-content-center d-flex flex-grow-1 flex-row align-items-center">
                        <LanguageSelect DisplayDownward="true" />
                    </div>
                </HiddenForScreenWidth>
                <div class="flex-grow-1"></div>
                <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </div>

    <div style="overflow-y: auto;" class="@NavMenuCssClass d-flex flex-grow-1" @onclick="CollapseNavMenu">
        <nav class="d-flex flex-column flex-grow-1">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="rules" Match="NavLinkMatch.All">
                    @Loc["Sudoku Rules"]
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="sudoku">
                    @Loc["Sudoku"]
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="printMultiple">
                    @Loc["Print Multiple"]
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="settings">
                    @Loc["Settings"]
                </NavLink>
            </div>

            <div class="flex-grow-1" />

            <div class="nav-item px-3">
                <a class="text-decoration-underline nav-link" href="https://github.com/APB97/WebSudoku" target="_blank">@Loc["Code"]</a>
            </div>

            <HiddenForScreenWidth HiddenForComparison="ComparisonOperator.LTE" Breakpoint="ScreenBreakpoints.Medium">
                <div class="nav-item px-3">
                    <div class="nav-link" style="display:flex; align-items: center">
                        <LanguageSelect />
                    </div>
                </div>
            </HiddenForScreenWidth>
        </nav>
    </div>
</LocalizedComponent>

@code {
    [CascadingParameter]
    public required ILayoutStateChangeHandler Layout { get; set; }

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    public void CollapseNavMenu()
    {
        collapseNavMenu = true;
        StateHasChanged();
    }
}

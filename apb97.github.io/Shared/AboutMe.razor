@using Microsoft.Extensions.Localization
@inject IStringLocalizer<AboutMe> Localizer
@inject IJSRuntime JS

<h2>@Localizer["About me"]</h2>

<div class="row">
    <div class="d-flex">
        <div class="d-flex flex-row">
            <div class="col-8 flex-column">
                <div class="d-flex flex-column">
                    <h5>@Localizer["whoami"]</h5>

                    <h3>@Localizer["iam_short"]</h3>
                </div>

                <p>
                    @Localizer["iam_long"]
                </p>
                <p>@Localizer["Technologies I use daily:"]</p>
                <ul>
                    <li>.NET 8</li>
                    <li>C# 12</li>
                    <li>ASP.NET Core</li>
                    <li>Blazor</li>
                    <li>HTML, CSS, JavaScript</li>
                    <li>GraphQL</li>
                    <li>PostgreSQL</li>
                    <li>@Localizer["OOP"]</li>
                    <li>@Localizer["ORM"]</li>
                    <li>@Localizer["DI"]</li>
                </ul>
                <p><b>@Localizer["degree_label"]</b>@Localizer["degree"]</p>

                <div class="d-none d-xxl-block">
                    <Projects />
                </div>
            </div>
            <div class="col-4">
                <img src="/images/AboutMe.jpg" alt="A picture of myself" style="width: 100%;" />
            </div>
        </div>
    </div>
</div>

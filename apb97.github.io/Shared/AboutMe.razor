@using Microsoft.Extensions.Localization
@inject IStringLocalizer<AboutMe> Localizer
@inject IJSRuntime JS

<h2>@Localizer["About me"]</h2>

<div class="row">
    <div class="d-flex flex-column">
        <div class="d-flex flex-row">
            <div class="col-8 flex-column">
                <div class="d-flex flex-column">
                    <h5>@Localizer["whoami"]</h5>

                    <h3>@Localizer["iam_short"]</h3>
                </div>

                <p>
                    @Localizer["iam_long"]
                </p>

                <div class="d-none d-lg-block">
                    @BulletPointsFragment
                </div>
                
                <p><b>@Localizer["degree_label"]</b>@Localizer["degree"]</p>
            </div>
            <div class="col-4">
                <img src="/images/AboutMe.jpg" alt="A picture of myself" style="width: 100%; max-width: calc(2*184px); max-height: calc(2*276px);" />
            </div>
        </div>
        <div class="d-block d-lg-none">
            @BulletPointsFragment
        </div>
    </div>
</div>

@code {
    private RenderFragment BulletPointsFragment => __builder =>
    {
        <div class="d-flex">
            <div class="col-6 p-2">
                <p>@Localizer["Technologies I use daily:"]</p>
                <ul>
                    <li>.NET 8</li>
                    <li>C# 12</li>
                    <li>ASP.NET Core</li>
                    <li>Blazor</li>
                    <li>HTML, CSS, JavaScript</li>
                    <li>GraphQL</li>
                    <li>PostgreSQL</li>
                    <li>@Localizer["OOP"]</li>
                    <li>@Localizer["ORM"]</li>
                    <li>@Localizer["DI"]</li>
                </ul>
            </div>
            <div class="col-6 p-2">
                <p>@Localizer["Other supporting technologies:"]</p>
                <ul>
                    <li>Git</li>
                    <li>JSON</li>
                    <li>SQL</li>
                    <li>YAML</li>
                    <li>Linux</li>
                    <li>@Localizer["Containers"]</li>
                    <li>Podman</li>
                    <li>Usernetes</li>
                </ul>
            </div>
        </div>
    };
}
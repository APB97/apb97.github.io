@code {
    protected override async Task OnInitializedAsync()
    {
        var destination = await JS.InvokeAsync<string>("sessionStorage.getItem", "destination");
        await JS.InvokeVoidAsync("sessionStorage.removeItem", "destination");
        if (destination == null) return;
        Navigation.NavigateTo(destination.Substring(1));
    }
}